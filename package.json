{
  "name": "reducerify",
  "version": "1.0.1",
  "description": "A reducer factory for TypeScript",
  "author": "Frédéric Mascaro <frédéric.mascaro@gmail.com> (https://github.com/wooandoo)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wooandoo/reducerify.git"
  },
  "keywords": ["reducer", "typescript", "state-management", "functional", "immutable"],
  "bugs": {
    "url": "https://github.com/wooandoo/reducerify/issues"
  },
  "homepage": "https://github.com/wooandoo/reducerify#readme",
  "license": "MIT",
  "module": "dist/index.js",
  "type": "module",
  "files": ["dist"],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "test": "vitest",
    "build": "tsdown src/index.ts",
    "lint": "biome check .",
    "ci": "pnpm build && pnpm lint && pnpm test",
    "prepare": "pnpm build",
    "example:counter": "node --experimental-strip-types examples/counter.ts",
    "example:todos": "node --experimental-strip-types examples/todos.ts"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "tsdown": "^0.11.9",
    "typescript": "^5",
    "vitest": "^3.1.3"
  }
}
